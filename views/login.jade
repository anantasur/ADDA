extends layout
block vars
 - var title = "Login"
block links
  a(href='/') home
block content
  h1 Login to your account
  if error
   p ERROR: #{error}
  form(action="/login" method="POST")
   span 
    b Email:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  
     input(type="email" name="email" required)
   br
   br
   span 
    b Password: 
     input(type="password" name="password" required)
   br
   br
   input(type="submit" value="Login")